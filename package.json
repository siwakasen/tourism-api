{
  "name": "tourweb_be",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "dev": "concurrently \"pnpm start:dev\" \"pnpm start:auth-api:dev\" \"pnpm start:testimonials:dev\" \"pnpm start:drivers:dev\"",
    "start:dev": "cross-env NODE_ENV=development nest start tour-api --watch",
    "auth:dev": "cross-env NODE_ENV=development nest start authr-api --watch",
    "watch:public": "chokidar 'apps/tour-api/public/**/*' -c 'cp -R apps/tour-api/public dist/apps/tour-api/'",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/tourweb_be/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/tourweb_be/test/jest-e2e.json",
    "typeorm": "typeorm-ts-node-commonjs",
    "start:testimonials:dev": "cross-env NODE_ENV=development nest start testimonials --watch",
    "start:drivers:dev": "cross-env NODE_ENV=development nest start drivers --watch",
    "start:debug-testimonials:dev": "cross-env NODE_ENV=development nest start testimonials --debug --watch",
    "start:tour-api:dev": "cross-env NODE_ENV=development nest start tour-api --watch",
    "start:debug-tour:dev": "cross-env NODE_ENV=development nest start tour-api --debug --watch",
    "start:tour-api:staging": "cross-env NODE_ENV=staging nest start tour-api --watch",
    "start:debug-tour:staging": "cross-env NODE_ENV=staging nest start tour-api --debug --watch",
    "start:tour-api:prod": "cross-env NODE_ENV=production nest start tour-api --watch",
    "start:debug-tour:prod": "cross-env NODE_ENV=production nest start tour-api --debug --watch",
    "start:auth-api:dev": "cross-env NODE_ENV=development nest start auth-api --watch",
    "start:debug-auth:dev": "cross-env NODE_ENV=development nest start auth-api --debug --watch",
    "start:auth-api:staging": "cross-env NODE_ENV=staging nest start auth-api --watch",
    "start:debug-auht:staging": "cross-env NODE_ENV=staging nest start auth-api --debug --watch",
    "start:auth-api:prod": "cross-env NODE_ENV=production nest start auth-api --watch",
    "start:debug-auth:prod": "cross-env NODE_ENV=production nest start auth-api --debug --watch",
    "build:auth-api": "nest build auth-api",
    "build:auth-api:prod": "cross-env NODE_ENV=production nest build auth-api",
    "build:tour-api": "nest build tour-api",
    "build:tour-api:prod": "cross-env NODE_ENV=production nest build tour-api",
    "build:testimonials": "nest build testimonials",
    "build:testimonials:prod": "cross-env NODE_ENV=production nest build testimonials",
    "build:drivers": "nest build drivers",
    "build:drivers:prod": "cross-env NODE_ENV=production nest build drivers"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.13.3",
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.4.17",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.17",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.4.17",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.17",
    "@nestjs/serve-static": "^4.0.2",
    "@nestjs/swagger": "^8.1.1",
    "@nestjs/typeorm": "^10.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/multer": "^1.4.12",
    "body-parser": "^1.20.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express": "^4.21.2",
    "ioredis": "^5.6.1",
    "multer": "1.4.5-lts.1",
    "nodemailer": "^6.10.1",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "^0.3.24"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.17",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.47",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.4.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-loader": "^9.5.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
